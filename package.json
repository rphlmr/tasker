{
  "name": "tasker",
  "private": true,
  "engines": {
    "node": ">=18.18.0"
  },
  "packageManager": "pnpm@8.7.6",
  "scripts": {
    "build": "turbo build",
    "clean": "git clean -xdf node_modules dist .next .turbo",
    "clean:workspaces": "turbo clean",
    "checks": "turbo format lint typecheck --continue",
    "checks:fix": "turbo format:fix lint:fix --continue --force",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push db:generate",
    "dev": "FORCE_COLOR=1 turbo dev --parallel",
    "dev:web": "turbo dev --parallel --filter !@technifit/expo --filter !@technifit/db",
    "format": "prettier . \"!apps/** !packages/** !tooling/**\" --check --cache --cache-location='node_modules/.cache/.prettiercache'",
    "format:fix": "prettier . \"!apps/** !packages/** !tooling/**\" --write --cache --cache-location='node_modules/.cache/.prettiercache' --loglevel=warn",
    "lint": "eslint . \"!apps/** !packages/** !tooling/**\" --cache --cache-location 'node_modules/.cache/.eslintcache' --max-warnings 0",
    "lint:fix": "eslint . \"!apps/** !packages/** !tooling/**\" --fix --cache --cache-location 'node_modules/.cache/.eslintcache' --max-warnings 0",
    "type-check": "turbo type-check --continue"
  },
  "dependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.0",
    "@manypkg/cli": "0.21.0",
    "@types/prettier": "3.0.0",
    "@technifit/eslint-config": "0.2.0",
    "@typescript-eslint/eslint-plugin": "6.7.2",
    "prettier-plugin-packagejson": "2.4.5",
    "prettier-plugin-tailwindcss": "0.5.4",
    "prettier": "3.0.3",
    "turbo": "1.10.14",
    "typescript": "5.2.2"
  }
}
