{
  "name": "tasker",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "checks": "turbo format typecheck lint --continue",
    "checks:fix": "turbo format:fix lint:fix --continue --force",
    "clean": "git clean -xdf node_modules dist .next .turbo",
    "clean:workspaces": "turbo clean",
    "dev": "turbo dev --parallel",
    "format": "prettier . \"!apps/** !packages/** !tooling/**\" --check --cache --cache-location='node_modules/.cache/.prettiercache'",
    "format:fix": "prettier . \"!apps/** !packages/** !tooling/**\" --write --cache --cache-location='node_modules/.cache/.prettiercache' --log-level=warn",
    "format:fix-workspaces": "turbo format:fix --continue",
    "format:workspaces": "turbo format --continue",
    "lint:fix-workspaces": "turbo lint:fix --continue",
    "lint:workspaces": "turbo lint --continue",
    "typecheck": "turbo typecheck --continue"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@technifit/tsconfig": "1.0.0",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "prettier": "3.2.4",
    "prettier-plugin-packagejson": "2.4.10",
    "prettier-plugin-tailwindcss": "0.5.11",
    "turbo": "1.12.3",
    "typescript": "5.3.3"
  },
  "packageManager": "pnpm@8.15.1",
  "engines": {
    "node": ">=20.11.0"
  }
}
