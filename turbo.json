{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env"],
  "pipeline": {
    "dev": {
      "persistent": true,
      "cache": false
    },
    "build": {},
    "clean": {
      "cache": false
    },
    "//#clean": {
      "cache": false
    }
  },
  "globalEnv": [
    "CI",
    "CLERK_PUBLISHABLE_KEY",
    "CLERK_SECRET_KEY",
    "NODE_ENV",
    "SENTRY_DSN",
    "SESSION_SECRET",
    "SKIP_ENV_VALIDATION",
    "STRIPE_API_KEY",
    "STRIPE_WEBHOOK_SECRET",
    "VERCEL_ENV",
    "VERCEL_URL",
    "VERCEL"
  ]
}
